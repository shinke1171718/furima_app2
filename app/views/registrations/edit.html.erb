<h1>ユーザー情報編集</h1>
<button><%= link_to "戻る", mypage_path(@user) %></button>

<% if flash[:notice] %>
  <div class="flash notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= form_with model: @user, url: update_user_registration_path(@current_user_edit), method: :patch do |f| %>

	<div class="field">
	  <%= f.label :名前 %><br />
	  <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
	</div>

	<div class="field">
	  <%= f.label :メールアドレス %><br />
	  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
	</div>

	<div class="field">
	  <%= f.label :郵便番号（ハイフンは除いて） %><br />
	  <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
	</div>

	<div class="field">
	  <%= f.label :市区町村 %><br />
	  <%= f.text_field :address1, autofocus: true, autocomplete: "address1" %>
	</div>

	<div class="field">
	  <%= f.label :番地（建物名・部屋番号） %><br />
	  <%= f.text_field :address2, autofocus: true, autocomplete: "address2" %>
	</div>

  <div class="field">
    <%= f.label :現在のパスワードを入力してください。 %><br />
    <%= f.password_field :current_password, autocomplete: "current_password" %>
  </div>

  <div class="field">
    <%= f.label :新しいパスワードを入力してください。 %><br />
    <%= f.password_field :password, autocomplete: "password" %>
  </div>

  <div class="field">
    <%= f.label :もう一度新しいパスワードを入力してください。 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "password_confirmation" %>
  </div>

	<div class="actions">
    <%= f.submit "更新する" %>
  </div>

<% end %>