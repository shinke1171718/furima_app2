<h1>サインイン</h1>

<%= render 'shared/error_messages', user: @user %>

<% if flash[:notice] %>
  <div class="flash notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
	<div class="field">
	  <%= f.label :名前 %><br />
	  <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
	</div>
	
	<div class="field">
	  <%= f.label :メールアドレス %><br />
	  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
	</div>
	
	<div class="field">
	  <%= f.label :郵便番号（ハイフンは除いて） %><br />
	  <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
	</div>
	
	<div class="field">
	  <%= f.label :市区町村 %><br />
	  <%= f.text_field :address1, autofocus: true, autocomplete: "address1" %>
	</div>
	
	<div class="field">
	  <%= f.label :番地（建物名・部屋番号） %><br />
	  <%= f.text_field :address2, autofocus: true, autocomplete: "address2" %>
	</div>

	<div class="field">
		<%= f.label :パスワード %><br />
	  <%= f.password_field :password, autocomplete: "password" %>
  </div>

	<div class="field">
		<%= f.label :password_confirmation %><br />
		<%= f.password_field :password_confirmation, autocomplete: "password_confirmation" %>
	</div>

	<div class="actions">
    <%= f.submit "新規登録" %>
  </div>

	<div class="field">
		<%= link_to 'すでに登録された方はこちら', new_user_session_path %>
	</div>

<% end %>